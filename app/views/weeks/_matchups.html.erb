<table class='table table-bordered table-condensed'>
  <thead>
  <tr>
    <th colspan="3">Matchup</th>
    <th>Tee time</th>
  </tr>
  </thead>
  <tbody>
  <% i = 1 %>
  <%= f.nested_fields_for :matchups, @matchups do |m| %>
      <tr class='<%= i.odd? ? 'warning' : 'success' %>'>
        <td style="padding-left:20px;">
          <%= m.hidden_field :id %>
          <%= m.collection_select :visiting_team_id, @week.season.teams, :id, :name, :include_blank => true %>

        </td>
        <td style="text-align: center;"> vs.</td>
        <td style="text-align: right;padding-right:20px;"><%= m.collection_select :home_team_id, @week.season.teams, :id, :name, :include_blank => true %>

        <td style="text-align: center;"><%= m.time_select :tee_time,
                                                          :combined => true,
                                                          :default => Time.now().change(:hour => 16, :minute => 00),
                                                          :minute_interval => 10,
                                                          :time_separator => "",
                                                          :start_hour => 16,
                                                          :start_minute => 0,
                                                          :end_hour => 18,
                                                          :end_minute => 30,
                                                          :labels => false,
                                                          :ampm => true
        %></td>
      </tr>
      <% i += 1 %>

  <% end %>
  </tbody>
</table>