<%= form_for(@player, :class => 'form-horizontal') do |f| %>
    <script>
        if (obj = document.getElementById("edit_player_<%= params[:id] %>")) {
            obj.className = 'form-horizontal';
        }
        else {
            document.getElementById('new_player').className = 'form-horizontal';
        }

    </script>
    <% if @player.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

          <ul>
            <% @player.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="control-group">
      <% [:first_name, :last_name, :email].each do |field_name| %>
          <%= f.label field_name, :class => 'control-label' %>
          <div class='controls'>
            <%= f.text_field field_name %>
          </div>

      <% end %>
      <%= f.label :skins_paid, :class => 'control-label' %>
      <div class='controls'><%= f.check_box :skins_paid %></div>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
